<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="@color/colorSecondaryDark"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="5dp"
    card_view:contentPadding="4dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/advert_cardview_main_picture"
            android:contentDescription="Advert main picture"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            />

        <TextView
            android:id="@+id/advert_cardview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_below="@id/advert_cardview_main_picture"
            android:ellipsize="end"
            android:textColor="@color/colorSecondaryDarker"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/advert_cardview_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/advert_cardview_title"
            android:textColor="@color/colorSecondaryDarker"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/advert_cardview_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:textColor="@color/colorSecondaryDarker"
            android:textSize="12sp"
            android:layout_below="@+id/advert_cardview_title"
            android:layout_toEndOf="@id/advert_cardview_price"
            />

        <TextView
            android:id="@+id/advert_cardview_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextLink"
            android:textSize="12sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/advert_cardview_main_picture"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>